@model PhanMemWebQuanLiBenhVien.Models.PhongBenh
@{
	ViewData["Title"] = "Tạo Phòng Bệnh  ";
}

<div class="container mt-4">
	<div class="row my-2">
		<div class="col text-primary"><h2>Thêm phòng bệnh mới</h2></div>
	</div>
	<form asp-action="Create" asp-controller="PhongBenh" method="post">
		<div class="form-group">
			<label asp-for="Name">Tên Phòng</label>
			<input asp-for="Name" type="text" class="form-control" placeholder="Nhập Tên Phòng">
		</div>
		<span asp-validation-for="Name" class="text-danger"></span>
		<div class="form-group">
			<label asp-for="NumberOfBeds">Số giường </label>
			<input asp-for="NumberOfBeds" type="number" class="form-control" placeholder="Nhập số giường">
		</div>
		<span asp-validation-for="NumberOfBeds" class="text-danger"></span>
		<br />
		<div class="row" style="margin-left: 1px">
			<a asp-controller="PhongBenh" asp-action="Index" class="btn text-white col col-auto">Quay lại</a>
			<div class="col-auto text-primary ">
				<button type="submit" class="btn btn-primary ">Thêm</button>
			</div>
		</div>
	</form>
</div>