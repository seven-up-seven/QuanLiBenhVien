@model IEnumerable<PhanMemWebQuanLiBenhVien.Models.PhongBenh>
@{
    ViewData["Title"] = "Danh Sách Phòng Bệnh";
}
<div class="container mt-4">
    <div class="row my-2">
        <div class="col text-primary"><h2>Danh sách phòng bệnh</h2></div>
        <div class="col col-2 text-end btn btn-primary text-center"><h5><i class="bi bi-person-plus-fill"></i> <a asp-action="Create" asp-controller="PhongBenh" class="text-decoration-none text-white">Thêm Phòng</a></h5></div>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên phòng</th>
                <th>Số bệnh nhân</th>
                <th>Số giường</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var phong in Model)
            {
                <tr>
                    <td>@phong.RoomId</td>
                    <td>@phong.Name</td>
                    <td>
                        @if(phong.Patients == null)
                        {
                            <p>0</p>
                        }
                        else
                        {
                            <p>@phong.Patients.Count()</p>
                        }
                    </td>
                    <td>@phong.NumberOfBeds</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="PhongBenh" asp-action="Update" asp-route-id="@phong.RoomId"><i class="bi bi-pencil-square"></i> Sửa</a>
                        <a asp-controller="PhongBenh" asp-action="Detail" asp-route-id="@phong.RoomId" class="btn btn-primary"><i class="bi bi-layout-text-sidebar-reverse"></i> Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>