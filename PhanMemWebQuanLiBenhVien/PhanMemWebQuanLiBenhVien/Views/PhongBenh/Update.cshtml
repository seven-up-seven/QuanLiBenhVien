@model PhanMemWebQuanLiBenhVien.Models.PhongBenh

@{
    ViewData["Title"] = "Cập Nhật Phòng Bệnh";
}

<div class="container mt-4">
    <div class="row my-2">
        <div class="col text-primary">
            <h2>Cập nhật thông tin phòng bệnh</h2>
        </div>
    </div>
    <form asp-action="Update" asp-controller="PhongBenh" method="post">
        <input asp-for="RoomId" type="hidden" />

        <div class="form-group">
            <label asp-for="Name">Tên Phòng</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Nhập Tên Phòng">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumberOfBeds">Số giường</label>
            <input asp-for="NumberOfBeds" type="number" class="form-control" min="1" placeholder="Nhập số giường">
            <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
        </div>

        <div class="row d-flex mt-4">
            <div class="col-auto">
                <a asp-controller="PhongBenh" asp-action="Index" class="btn btn-outline-dark">Quay lại</a>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Cập Nhật</button>
            </div>
        </div>
    </form>
</div>
