@model IEnumerable<PhanMemWebQuanLiBenhVien.Models.Models.Medicine>

@{
    ViewData["Title"] = "Danh sách các loại thuốc";
}
<link rel="stylesheet" href="~/css/Medicine/Index.css"/>
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" asp-controller="Medicine" class="btn btn-primary">Create New</a>
    <div class="row d-flex justify-content-between">
        <form asp-action="SearchMedicineByName" class="col col-auto">
            <input name="name" placeholder="Nhập tên thuốc" style="height:40px" class="border-1 rounded-3"/>
            <button type="submit"><i class="bi bi-search"></i></button>
        </form>
        <form asp-action="TrichXuatThuoc" class="col col-auto">
            <input name="ids" placeholder="Nhập ID các loại thuốc cách nhau bởi dấu phẩy" style="height:40px; width: 350px" class=" border-1 rounded-3"/>
            <button type="submit">Trích xuất thuốc</button>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Tên
                </th>
                <th>
                    Công dụng
                </th>
                <th>
                    Đơn vị
                </th>
                <th>
                    Giá (VNĐ)
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Ngày hết hạn
                </th>
                <th style="width:260px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MedicineId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpiryDate)
                    </td>
                    <td>
                        <div class="row gap-1">
                            <a class="col col-auto" asp-action="Edit" asp-route-id="@item.MedicineId">Edit</a>
                            <a class="col col-auto" asp-action="Delete" asp-controller="Medicine" asp-route-id="@item.MedicineId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>