@model PhanMemWebQuanLiBenhVien.Models.Models.Medicine
<link rel="stylesheet" href="~/css/Medicine/Create.css"/>
<div class="container mt-4">
    <div class="row my-2">
        <div class="col text-primary">
            <h2>Thêm thuốc mới</h2>
        </div>
    </div>
    <form asp-action="Create" asp-controller="Medicine" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Tên thuốc</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên thuốc" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Usage">Cách sử dụng</label>
            <input asp-for="Usage" class="form-control" placeholder="Nhập cách sử dụng" />
            <span asp-validation-for="Usage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Unit">Đơn vị</label>
            <input asp-for="Unit" class="form-control" placeholder="Nhập đơn vị" />
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Giá</label>
            <input asp-for="Price" class="form-control" placeholder="Nhập giá" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity">Số lượng</label>
            <input asp-for="Quantity" class="form-control" placeholder="Nhập số lượng" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExpiryDate">Ngày hết hạn</label>
            <input asp-for="ExpiryDate" class="form-control" placeholder="Nhập ngày hết hạn" />
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>