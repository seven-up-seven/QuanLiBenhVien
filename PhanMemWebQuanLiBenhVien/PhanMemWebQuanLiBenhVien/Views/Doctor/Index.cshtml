@model IEnumerable<PhanMemWebQuanLiBenhVien.Models.Doctor>
@{
    ViewData["Title"] = "Danh Sách Bác Sĩ";
}
<div class="container mt-4">
    <div class="row my-2">
        <div class="col text-primary"><h2>Danh sách bác sĩ</h2></div>
        <div class="col col-2 text-end btn btn-primary text-center"><h5><i class="bi bi-person-plus-fill"></i> <a asp-action="Create" asp-controller="Doctor" class="text-decoration-none text-white">Thêm bác sĩ</a></h5></div>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>CCCD</th>
                <th>Họ và tên</th>
                <th>Giới tính</th>
                <th>Tuổi</th>
                <th>Chuyên ngành</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.DoctorId</td>
                    <td>@doctor.DoctorCCCD</td>
                    <td>@doctor.DoctorName</td>
                    <td>@doctor.DoctorGender.ToString()</td>
                    <td>@doctor.DoctorAge</td>
                    <td>
                        @if (doctor.Profession!=null)
                        {
                            <p>@doctor.Profession.ProfessionName</p>
                        }
                        else
                        {
                            <p>nothing</p>
                        }
                    </td>
                    <td>
                    <a class="btn btn-primary" asp-controller="Doctor" asp-action="Update" asp-route-DoctorId="@doctor.DoctorId"><i class="bi bi-pencil-square"></i> Sửa</a>
                    <a asp-controller="Doctor" asp-action="Detail" asp-route-id="@doctor.DoctorId" class="btn btn-primary"><i class="bi bi-layout-text-sidebar-reverse"></i> Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>