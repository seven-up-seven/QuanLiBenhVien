<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhanMemWebQuanLiBenhVien</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhanMemWebQuanLiBenhVien.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <!-- Vertical Navbar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar h-100">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            @if (!string.IsNullOrEmpty(ViewBag.Doctor.DoctorImgURL))
                            {
                                <img src="@ViewBag.Doctor.DoctorImgURL" style="width: 100%; height: auto" class="img-fluid rounded-circle" />
                            }
                            else
                            {
                                <img src="~/images/doctor.jpg" style="width: 100%; height: auto" class="img-fluid rounded-circle" />
                            }
                        </li>
                        <partial name="_LoginPartial" class="pb-2" />
                        <li class="nav-item pb-2">
                            <a class="nav-link text-dark" asp-controller="Doctor" asp-action="DoctorHomePage" asp-route-DoctorId="@ViewBag.Doctor.DoctorId">
                                <i class="bi bi-house-fill"></i> Home
                            </a>
                        </li>
                        <li class="nav-item pb-2">
                            <a class="nav-link text-dark" asp-controller="Doctor" asp-action="DashBoard" asp-route-DoctorId="@ViewBag.Doctor.DoctorId">
                                <i class="bi bi-clipboard"></i> Dash Board
                            </a>
                        </li>
                        <li class="nav-item pb-2">
                            <a class="nav-link text-dark" asp-controller="Doctor" asp-action="DoctorWorkSchedule" asp-route-DoctorId="@ViewBag.Doctor.DoctorId">
                                <i class="bi bi-calendar"></i> Schedule
                            </a>
                        </li>
                        <li class="nav-item pb-2">
                            <a class="nav-link text-dark" asp-controller="Doctor" asp-action="DoctorPatients" asp-route-DoctorId="@ViewBag.Doctor.DoctorId">
                                <i class="bi bi-person"></i> Patients
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="py-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
