@model Nurse
@{
	ViewData["Title"] = "Chi Tiết Y Tá";
}
<div>
	<h2 class="my-5">Chi tiết</h2>
	<div class="mt-5">
		<p>ID: @Model.NurseId</p>
		<p>Tên y tá: @Model.NurseName</p>
		<p>CCCD: @Model.NurseCCCD</p>
		<p>Tuổi: @Model.NurseAge</p>
		<p>Giới tính: @Model.NurseGender.ToString()</p>
	</div>
	<div class="my-4">
		<table>
			<tr>
				<th><h4>Danh sách bệnh nhân: </h4></th>
				@{
					if (Model.PatientList != null)
					{
						foreach (var patient in Model.PatientList)
						{
							<td><a href="@Url.Action("Detail", "Patient", new {PatientId = patient.PatientId})" class="text-decoration-none">@patient.Name</a></td>
						}
					}
				}
			</tr>
		</table>
	</div>
	<div class="row d-flex">
		<div class="col-auto text-primary"><a asp-controller="Nurse" asp-action="Index" class="btn text-white">Quay lại</a></div>
		<div class="col-auto text-primary">
			<a class="btn btn-primary" asp-controller="Nurse" asp-action="Delete" asp-route-NurseId="@Model.NurseId">Xóa</a>
		</div>
	</div>
</div>
