@using PhanMemWebQuanLiBenhVien.DataAccess.Repository.Interfaces
@inject IUnitOfWork UnitOfWork
@{
    if (User.IsInRole("Doctor"))
    {
        var doctor = UnitOfWork.DoctorRepository.Get(u => u.Username == User.Identity.Name);
        ViewBag.Doctor = doctor;
        Layout = "_CustomedLayout";
    }
    else if (User.IsInRole("Nurse"))
    {
        var nurse = UnitOfWork.NurseRepository.Get(u => u.Username == User.Identity.Name);
        ViewBag.Nurse = nurse;
        Layout = "_CustomedLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}

