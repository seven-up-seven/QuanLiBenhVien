@model Profession
@{
    ViewData["Title"] = "Sửa Chuyên Khoa";
}
<link rel="stylesheet" href="~/css/Profession/Update.css"/>
@if (Model == null)
{
    <p>Không tìm thấy chuyên khoa cần sửa</p>
}
else
{
    <div class="container mt-4">
        <div class="row my-2">
            <div class="col text-primary">
                <h2>Sửa chuyên khoa</h2>
            </div>
        </div>
        <form method="post">
            <input asp-for="ProfessionId" hidden />
            <div class="form-group">
                <label for="Name">Tên chuyên khoa</label>
                <span asp-validation-for="ProfessionName" class="text-danger"></span>
                <input asp-for="ProfessionName" class="form-control" placeholder="Nhập tên chuyên khoa" />
            </div>
            <div class="form-group">
                <label for="Name">Mô tả chuyên khoa</label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <input asp-for="Description" class="form-control" placeholder="Nhập mô tả chuyên khoa" />
            </div>
            <div class="form-group">
                <label for="ProfessionId">Trưởng khoa</label>
                <select asp-for="TruongKhoaId" asp-items="@ViewBag.DoctorsInProfession" class="form-control">
                    <option value="@null">Chọn trưởng khoa</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top: 10px">
                Sửa
            </button>
        </form>
    </div>
}
