@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Danh Sách Bệnh Nhân";
}
<div class="container mt-4">
    <div class="row my-2">
        <div class="col text-primary"><h2>Danh sách bệnh nhân</h2></div>
        <div class="col col-2 text-end btn btn-primary text-center"><h5><i class="bi bi-person-plus-fill"></i> <a asp-action="Create" asp-controller="Patient" class="text-decoration-none text-white">Thêm bệnh nhân</a></h5></div>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>CCCD</th>
                <th>Họ và tên</th>
                <th>Giới tính</th>
                <th>Tuổi</th>
                <th>Tình trạng</th>
                <th>BHYT</th>
                <th>Bác sĩ phụ trách</th>
                <th>Y tá phụ trách</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.PatientId</td>
                    <td>@patient.CCCD</td>
                    <td>@patient.Name</td>
                    <td>@patient.Gender.ToString()</td>
                    <td>@patient.Age</td>
                    <td>@patient.TrangThaiDieuTri.ToString()</td>
                    <td>@patient.BHYT</td>
                    <td></td>
                    <td></td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Patient" asp-action="Update" asp-route-PatientId="@patient.PatientId"><i class="bi bi-pencil-square"></i> Sửa</a>
                        <a asp-controller="Patient" asp-action="Detail" asp-route-PatientId="@patient.PatientId" class="btn btn-primary"><i class="bi bi-layout-text-sidebar-reverse"></i> Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
